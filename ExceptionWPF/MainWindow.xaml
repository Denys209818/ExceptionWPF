<Window x:Class="ExceptionWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExceptionWPF"
        mc:Ignorable="d"
        Title="Головна форма" Height="200" Width="200">
    <Grid>
        <!--Створення єдиної кнопки, яка генерує помилку подією Click-->
        <Button x:Name="btnException" Width="150" Height="50" Click="btnException_Click"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button.Content>
                <!--Текст зображений в кнопці-->
                Do something bad!
            </Button.Content>
        </Button>
    </Grid>
</Window>
